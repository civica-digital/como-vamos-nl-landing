!!!
%html
  %head
    %meta{charset: "utf-8"}
    %meta{content: "IE=edge,chrome=1", http: {equiv: "X-UA-Compatible"}}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1"}
    %title= current_page.data.title || "Cómo Vamos, Nuevo León"
    = stylesheet_link_tag "application"

  %body{class: page_classes}
    %header.navigation.cvnl{:role => "banner"}
      .navigation-wrapper
        .container
          .logo.pull-left
            = link_to './' do
              = image_tag 'logos/cvnl.png'
          %a#js-mobile-menu.navigation-menu-button{:href => "javascript:void(0)"} MENU
          %nav{:role => "navigation"}
            %ul#js-navigation-menu.navigation-menu.show
              %li.nav-link= link_to '¿Qué es Cómo Vamos, Nuevo León?', './que-es'
          / .navigation-tools
          /   %ul
          /     %li.nav-link.more
          /       %a{:href => "javascript:void(0)"} Más
          /       %ul.submenu
          /         %li
          /           %a{:href => "javascript:void(0)"} Submenu Item
          /         %li
          /           %a{:href => "javascript:void(0)"} Another Item

    = yield

    %footer
      .container.ornament
        .box.text-center
          %h3 ACERCA DE
          %ul
            %li= link_to '¿Qué es Cómo Vamos, Nuevo León?', './que-es'
            %li= link_to 'Organizaciones', '#'
            %li= link_to 'Línea de tiempo', '#'
            %li= link_to 'Equipo y Gobernanza', '#'
        .box.text-center
          =link_to image_tag('logos/acv-byn.png'), '#', class: 'logo'
          %ul
            %li= link_to 'Las 11 acciones', '#'
            %li= link_to 'Reuniones con Alcaldes', '#'
            %li= link_to 'Avances', '#'
        .box.text-center
          =link_to image_tag('logos/gcv-byn.png'), '#', class: 'logo'
          %ul
            %li= link_to 'Compromisos y metas', '#'
            %li= link_to 'Reuniones con el Gobernador', '#'
            %li= link_to 'Avances', '#'
        .box.text-center
          %h3 CONTACTO
          %ul.social
            %li.inline= link_to image_tag('icons/facebook.png'), 'https://www.facebook.com/comovamosnl', target: '_blank'
            %li.inline= link_to image_tag('icons/twitter.png'), 'https://twitter.com/comovamosnl', target: '_blank'
            %li.inline= link_to image_tag('icons/youtube.png'), 'http://www.youtube.com/user/comovamosnl', target: '_blank'
            %li.inline= link_to image_tag('icons/flickr.png'), 'http://www.flickr.com/photos/comovamosnl', target: '_blank'
      .copyright
        .container
          %span 2016 - Cómo Vamos, Nuevo León
          = link_to 'Escríbenos', 'mailto: cgarza@comovamosnl.org', class: 'pull-right'

    = javascript_include_tag "https://code.jquery.com/jquery-2.1.1.min.js"
    = javascript_include_tag "application"
